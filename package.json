{
  "name": "vscode-doiuse",
  "displayName": "doiuse",
  "description": "Lint CSS for browser support against caniuse database.",
  "version": "1.0.2",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.3.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-doiuse/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-doiuse"
  },
  "keywords": [
    "doiuse",
    "caniuse",
    "lint",
    "css"
  ],
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:stylus",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:sass-indented"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "puglint configuration options",
      "properties": {
        "doiuse.enable": {
          "type": "boolean",
          "default": false,
          "description": "Control whether doiuse is enabled for styles files or not."
        },
        "doiuse.messageLevel": {
          "type": "string",
          "enum": ["Information", "Warning", "Error"],
          "default": "Warning",
          "description": "Represents a diagnostic level, such as a Information, Warning or Error."
        },
        "doiuse.browsers": {
          "type": "array",
          "default": [],
          "description": "An autoprefixer-like array of browsers."
        },
        "doiuse.ignore": {
          "type": "array",
          "default": [],
          "description": "An optional array of features to ignore."
        },
        "doiuse.ignoreFiles": {
          "type": "array",
          "default": [],
          "description": "An optional array of file globs to match against original source file path, to ignore."
        }
      }
    }
  },
  "devDependencies": {
    "vscode": "^0.11.14",
    "xo": "^0.16.0"
  },
  "dependencies": {
    "vscode-languageclient": "2.3.0",
    "vscode-languageserver": "2.2.1",
    "multimatch": "2.1.0",
    "postcss": "5.1.1",
    "postcss-less": "0.14.0",
    "postcss-scss": "0.1.9",
    "sugarss": "0.1.5"
  },
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "space-before-function-paren": [2, "never"],
      "babel/arrow-parens": [2, "always"],
      "babel/object-curly-spacing": [2, "always"],
      "babel/generator-star-spacing": [2, "after"]
    },
    "envs": [
      "node"
    ]
  }
}
