{
  "name": "vscode-doiuse",
  "displayName": "doiuse",
  "description": "Lint CSS for browser support against caniuse database.",
  "version": "1.3.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.9.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-doiuse/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-doiuse"
  },
  "keywords": [
    "doiuse",
    "caniuse",
    "lint",
    "css"
  ],
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:stylus",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:sass-indented"
  ],
  "main": "./out/client.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "puglint configuration options",
      "properties": {
        "doiuse.enable": {
          "type": "boolean",
          "default": false,
          "description": "Control whether doiuse is enabled for styles files or not."
        },
        "doiuse.messageLevel": {
          "type": "string",
          "enum": [
            "Information",
            "Warning",
            "Error"
          ],
          "default": "Warning",
          "description": "Represents a diagnostic level, such as a Information, Warning or Error."
        },
        "doiuse.browsers": {
          "type": "array",
          "default": [],
          "description": "An autoprefixer-like array of browsers."
        },
        "doiuse.ignore": {
          "type": "array",
          "default": [],
          "description": "An optional array of features to ignore."
        },
        "doiuse.ignoreFiles": {
          "type": "array",
          "default": [],
          "description": "An optional array of file globs to match against original source file path, to ignore."
        },
        "doiuse.run": {
          "type": "string",
          "enum": [
            "onSave",
            "onType"
          ],
          "default": "onType",
          "description": "Run the linter on save (onSave) or on type (onType)."
        }
      }
    }
  },
  "devDependencies": {
    "@types/micromatch": "^2.3.29",
    "@types/node": "^7.0.5",
    "tslint": "^4.5.1",
    "tslint-config-xo": "^1.1.0",
    "typescript": "^2.2.1",
    "vscode": "^1.0.5"
  },
  "dependencies": {
    "micromatch": "2.3.11",
    "npm-module-path": "2.0.2",
    "postcss": "5.2.15",
    "postcss-less": "0.15.0",
    "postcss-scss": "0.4.1",
    "sugarss": "0.2.0",
    "vscode-languageclient": "3.1.0",
    "vscode-languageserver": "3.1.0"
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf out",
    "lint": "tslint src/**/*.ts",
    "compile": "tsc",
    "build": "npm run clean && npm run lint && npm run compile",
    "watch": "npm run clean && npm run lint && npm run compile -- --sourceMap --watch"
  }
}
